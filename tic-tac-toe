stolb = int(input("Игра началась.Игрок 1 сейчас ваш ход. Введите столбец. "))
while stolb not in ["1", "2", "3"]:
    stolb = input("Такого столбца нет введите 1 или 2 или 3. ")
strok = int(input("Теперь введите строку. "))
while strok not in ["1", "2", "3"]:
    strok = input("Такого столбца нет введите 1 или 2 или 3. ")
