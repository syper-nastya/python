dela = ['.']
Dela = input("напиши что ты хочешь зделать ")
while Dela == "Выход"
    if Dela == "добавить":
        dela.append(input("Введите новый элемент списка "))
    if Dela == "показать":
        print(dela)
    if Dela == "удалить":
        ind = input('Введи индекс элемента который ты хочешь удалить')
        del dela[ind]
    if Dela == 'показать по индексу':
        ind = input('Введи индекс элемента который ты хочешь удалить')
        print(dela[ind])
    Dela = input("напиши что ты хочешь зделать ")
